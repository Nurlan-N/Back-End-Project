@model Category


@{
    ViewData["Title"] = "Ditail";
    int count = 0;
}

<div class="row">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Category Detail Page</h1>
    </div>
</div>
<div class="row">
    <div class=" col-lg-4">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@Model.Name</h5>
            </div>
        </div>
    </div>
</div>

@if (Model.Products != null && Model.Products.Count() > 0)
{
    <div class="row">
        <h4>Products</h4>
        <div class="col-lg-12">
            <table class="table table-bordered table-striped ">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Created By</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.Products)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td><img style="width: 100px" src="~/assets/img/product/@product.Image" /></td>
                            <td>@product.Title</td>
                            <td>@product.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                            <td>@product.CreatedBy</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

}

