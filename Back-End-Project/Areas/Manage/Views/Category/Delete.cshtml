@model Category


@{
    ViewData["Title"] = "Delete";
    int count = 0;

}

<div class="row">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Detail Page</h1>
    </div>
    <div class="col-lg-2">
        <a class="btn btn-primary mb-4" asp-action="index" asp-controller="Category" asp-area="manage">Go To Home</a>
    </div>
    <div class="col-lg-2">
        <a class="btn btn-primary mb-4 deleteBtn" asp-action="deletecategory" asp-controller="Category" asp-area="manage" asp-route-id="@Model.Id">Deleted</a>
    </div>
</div>
@if (Model.Products != null && Model.Products.Count() > 0)
{
    <div class="row">
        <h4>Products</h4>
        <div class="col-lg-12">
            <table class="table table-bordered table-striped ">
                <thead>
                    <tr>
                        <th>№</th>
                        <th>Image</th>
                        <th>Name</th>
                        <th>Created At</th>
                        <th>Created By</th>

                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.Products)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td><img style="width: 100px" src="~/assets/img/product/@product.Image" /></td>
                            <td>@product.Title</td>
                            <td>@product.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                            <td>@product.CreatedBy</td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

}

