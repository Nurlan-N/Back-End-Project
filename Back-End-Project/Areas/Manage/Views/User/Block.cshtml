@model AppUser

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Block User Page</h1>
    </div>
    <div class="col-lg-2">
        <a class="btn btn-primary mb-4" asp-action="index" asp-controller="user" asp-area="manage">Create</a>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <table class="table table-bordered table-striped ">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>SurName</th>
                    <th>Email/th>
                    <th>UserName</th>

                </tr>
            </thead>
            <tbody>
                    <tr>
                        <td>@Model.Name</td>
                    <td>@Model.SurName</td>
                    <td>@Model.Email</td>
                    <td>@Model.UserName</td>
                    </tr>
            </tbody>
        </table>
        <form method="post">
            <input asp-for="LockoutEnd" type="date" value="@DateTime.UtcNow.ToString("yyyy-MM-dd")" min="@DateTime.UtcNow.ToString("yyyy-MM-dd")" max="2025-01-01">
            <button type="submit" class="btn btn-danger">Block</button>
        </form>
    </div>
</div>

