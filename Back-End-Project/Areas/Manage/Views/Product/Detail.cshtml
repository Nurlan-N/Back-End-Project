@model Product


@{
    ViewData["Title"] = "Ditail";
}

<div class="row">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Category Detail Page</h1>
    </div>
</div>
<div class="row">
    <div class=" col-lg-4">
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">@Model.Title</h5>
            </div>
        </div>
    </div>
</div>


<div class="row">
    <h4>Products</h4>
    <div class="col-lg-12">
        <table class="table table-bordered table-striped ">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Name</th>
                    <th>Category</th>
                    <th>Created At</th>
                    <th>Created By</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><img style="width: 100px" src="~/assets/img/product/@Model.Image" /></td>
                    <td>@Model.Title</td>
                    <td>@Model.Category?.Name</td>
                    <td>@Model.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                    <td>@Model.CreatedBy</td>
                </tr>
            </tbody>
        </table>
        <div>
            <h3>Description</h3>
            <p>@Model.Description</p>
        </div>
    </div>
</div>



