@model PageNatedList<Slider>

@{
    ViewData["Title"] = "Index";
    int count = (Model.PageIndex - 1) * 3;
}

<div class="row">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Slider Page</h1>
    </div>
    <div class="col-lg-2">
        <a class="btn btn-primary mb-4" asp-action="create" asp-controller="slider" asp-area="manage">Create new Slider</a>
    </div>
</div>
<div class="row">
    @await Html.PartialAsync("_SliderIndexPartial", Model)

</div>
@section Scripts{
    @await Html.PartialAsync("_Validations")
}
