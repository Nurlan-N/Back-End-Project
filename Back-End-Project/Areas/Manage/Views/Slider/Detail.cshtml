@model Slider


@{
    ViewData["Title"] = "Ditail";
}

<div class="row">
    <div class="col-lg-2">
        <h1 class="h3 mb-4 text-gray-800">Slider Detail Page</h1>
    </div>
</div>
<div class="row">
    <h4>Products</h4>
    <div class="col-lg-12">
        <table class="table table-bordered table-striped ">
            <thead>
                <tr>
                    <th>Image</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Created At</th>
                    <th>Created By</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><img style="width: 100px" src="~/assets/img/slider/@Model.Image" /></td>
                    <td>@Model.Title</td>
                    <td>@Model.Description</td>
                    <td>@Model.CreatedAt?.ToString("dd-MMM-yyyy")</td>
                    <td>@Model.CreatedBy</td>
                </tr>
            </tbody>
        </table>
        <div>
            <h3>Description</h3>
            <p>@Model.Description</p>
        </div>
    </div>
</div>