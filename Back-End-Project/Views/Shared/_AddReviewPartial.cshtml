@model Review


<form method="post" asp-action="AddReview" asp-controller="Shop" class="review-form">
    <input type="hidden" name="ProductId" value="@Model.ProductId" />
    <div class="form-group row">
        <div class="col">
            <label asp-for="Name" class="col-form-label"><span class="text-danger">*</span> Your Name</label>
            <input asp-for=Name type="text" class="form-control" required>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for=Email class="col-form-label"><span class="text-danger">*</span> Your Email</label>
            <input asp-for=Email type="email" class="form-control" required>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label asp-for=Description class="col-form-label"><span class="text-danger">*</span> Your Review</label>
            <textarea asp-for=Description class="form-control" required></textarea>
            <div class="help-block pt-10"><span asp-validation-for=Description class="text-danger">Note:</span> HTML is not translated!</div>
        </div>
    </div>
    <div class="form-group row">
        <div class="col">
            <label class="col-form-label">Rating</label>
            <div class="containet">
                <div class="rate">
                    <input type="radio" id="star5" asp-for="Star" value="5" />
                    <label for="star5" title="text">5 stars</label>
                    <input type="radio" id="star4" asp-for="Star" value="4" />
                    <label for="star4" title="text">4 stars</label>
                    <input type="radio" id="star3" asp-for="Star" value="3" />
                    <label for="star3" title="text">3 stars</label>
                    <input type="radio" id="star2" asp-for="Star" value="2" />
                    <label for="star2" title="text">2 stars</label>
                    <input type="radio" id="star1" asp-for="Star" value="1" />
                    <label for="star1" title="text">1 star</label>
                </div>
            </div>
        </div>
    </div>
    <div class="buttons">
        <button class="sqr-btn" type="submit">Continue</button>
    </div>
</form> <!-- end of review-form -->
