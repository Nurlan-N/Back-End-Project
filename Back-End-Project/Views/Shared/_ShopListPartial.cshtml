@model IEnumerable<Product>

@foreach (Product product in Model)
{
    <div class="col-lg-4 col-sm-6">
        <div class="product-item mb-53">
            <div class="product-thumb">
                <a asp-action="detail" asp-controller="shop" asp-route-id="@product.Id">
                    <img src="assets/img/product/@product.Image" alt="">
                </a>
            </div>
            <div class="product-content">
                <h5 class="product-name">
                    <a asp-action="detail" asp-controller="shop" asp-route-id="@product.Id">@product.Title.Substring(0,18)</a>
                </h5>
                <div class="price-box">
                    <span class="price-regular">$@product.DiscountedPrice</span>
                    <span class="price-old"><del>$@product.Price</del></span>
                </div>
                <div class="product-action-link">
                    <a class="addToWishlist" href="#" data-id="@product.Id" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                    <a class="addToBasket" href="#" data-id="@product.Id" data-toggle="tooltip" title="Add To Cart"><i class="ion-bag"></i></a>
                    <a asp-action="ProductModal" asp-controller="Product" asp-route-id="@product.Id" class="productModal" data-toggle="modal" data-target="#quick_view">
                        <span data-toggle="tooltip"
                          title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                    </a>
                </div>
            </div>
        </div>

        <!-- product grid item end -->
        <!-- product list item start -->

        <div class="product-list-item mb-30">
            <div class="product-thumb">
                <a asp-action="detail" asp-controller="shop" asp-route-id="@product.Id">
                    <img src="assets/img/product/@product.Image" alt="product thumb">
                </a>
            </div>
            <div class="product-content-list">
                <h5 class="product-name">
                    <a asp-action="detail" asp-controller="shop" asp-route-id="@product.Id">@product.Title</a>
                </h5>
                <div class="price-box">
                    <span class="price-regular">$@product.DiscountedPrice</span>
                    <span class="price-old"><del>$@product.Price</del></span>
                </div>
                <p>
                    @product.Description
                </p>
                <div class="product-link-2 position-static">
                    <a class="addToWishlist" data-id="@product.Id" href="#" data-toggle="tooltip" title="Wishlist"><i class="ion-android-favorite-outline"></i></a>
                    <a class="addToBasket" href="#" data-id="@product.Id" data-toggle="tooltip" title="Add To Cart">
                        <i class="ion-bag"></i>
                    </a>
                    <a asp-action="ProductModal" asp-controller="Product" asp-route-id="@product.Id" class="productModal" data-toggle="modal" data-target="#quick_view">
                        <span data-toggle="tooltip"
                          title="Quick View"><i class="ion-ios-eye-outline"></i></span>
                    </a>
                </div>
            </div>
        </div>
    </div>

}